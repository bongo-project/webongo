\%(include|header.tpl)s
.breadcrumb
  %p
    %a{:href => "%(url|/)sagents"} Agents
    \&#187
    %a{:href => "#", "tal:content" => "hname"} Agent
%h1{"tal:content" => "hname"} Agent
#msg.info{"tal:condition" => "info", "tal:content" => "info"} Something happened, but I'm not sure.
#err.error{"tal:condition" => "error", "tal:content" => "error"} An error occured while processing your request. No more information is available.
#opsuccess.info{"tal:condition" => "opsuccess"} Operation completed sucessfully.
%p
  %p{"tal:condition" => "description", "tal:contect" => "description"}
  %form{:method => "post"}
    %table{:cellpadding => "1"}
      %tr{"tal:repeat" => "setting settinglist"}
        %td{:style => "padding-right: 16px;"}
          %label{"tal:attributes" => "for setting/id", "tal:content" => "setting/name"}
        %td{"tal:condition" => "setting/textentry"}
          %input{"tal:attributes" => "name setting/id;id setting/id;value setting/value", :type => "text"}/
          %span{"tal:content" => "setting/suffix"}
        %td{"tal:condition" => "setting/numericentry"}
          %input{:style => "width: 45px;", "tal:attributes" => "name setting/id;id setting/id;value setting/value", :type => "text"}/
          %span{"tal:content" => "setting/suffix"}
        %td{"tal:condition" => "setting/boolentry"}
          %input{"tal:attributes" => "name setting/id;id setting/id;checked setting/checked", :type => "checkbox"}/
          %span{"tal:content" => "setting/suffix"}
        %td{"tal:condition" => "setting/selectentry"}
          %div{:style => "width: 325px; visibility: none"}
            %div{:style => "width: 25px; float: right;"}
              %a{:style => "float: right;", "tal:attributes" => "href setting/jsadd"}
                %img{:alt => "Add", :border => "0", :height => "16", :src => "/img/list-add.png", :width => "16"}/
              %br/
              %a{:style => "float: right;", "tal:attributes" => "href setting/jsrm;id setting/jsid"}
                %img{:alt => "Remove", :border => "0", :height => "16", :src => "/img/list-remove.png", :width => "16"}/
            %select{:size => "5", :style => "width: 300px; border: 1px solid #888a85; background-color: #fff;", "tal:attributes" => "id setting/selectorid"}
              %option{"tal:content" => "op", "tal:repeat" => "op setting/value"}
          %div{"tal:attributes" => "id setting/revertbox"}
            %input{"tal:attributes" => "name setting/id;id setting/id;value setting/strvalue", :type => "text"}/
            %p Please enter values into the above textbox, seperated by a comma.
          %script{"tal:content" => "setting/revertjs", :type => "text/javascript"}
    %input{"tal:attributes" => "name setting/id;id setting/id;value setting/value", "tal:condition" => "setting/hidden", :type => "hidden"}/
    %br/
    %br/
    %span.button
      %button{:type => "reset", :value => "Reset"} Reset
    %span.button
      %button{:type => "submit", :value => "Save"} Save
\%(include|footer.tpl)s
